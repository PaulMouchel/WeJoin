<div class="container">
	<div class="row justify-content-center">
	    <div class="col-lg-12 bloc">
			<div class="row title_bloc">
				<div class="col-lg-12 text-center ">
					<h2>Mon planning</h2>
				</div>
			</div>
			<div id="my-events_calendar">
				<%= render partial: "calendar", locals: {events: @attendances} %>
			</div>
		</div>
		<div class="col-lg-12 bloc">

			<div class="row title_bloc">
				<div class="col-lg-12 text-center ">
				  <h2>Mon historique</h2>
				</div>
			</div>
			<div class="history">
				<table class="table">
					<thead class="thead-light">
						<tr>
							<th>Date</th>
							<th>Nom du lieu</th>
							<th>Participants</th>
						</tr>
					</thead>
					<tbody>
						<% @past_attendances.each do |attendance| %>
							<tr>
								<td><%= attendance.date.to_date.strftime("%d/%m/%Y") %></td>
								<td><%= link_to attendance.place.name, city_place_path(attendance.place.city, attendance.place) %></td>
								<td>
									<% attendance.users.each do |user| %>
									    <%= link_to user do %>
									    	<%= render 'users/user_pic', user: user, class_list:"small-image circle" %>
									    <% end %>
								    <% end %>
								</td>
							</tr>
						<%end%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>