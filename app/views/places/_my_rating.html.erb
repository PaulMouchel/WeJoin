<% if user_signed_in? %>
	<% 1.upto(5) do |i| %>
		<%= link_to user_ratings_path(current_user, place_id: place.id, stars: i), method: :post, remote: true  do%>
			<% if place.my_rating(current_user) >= i %>
				<i id="my-star-<%= i %>" class="fas fa-star text-warning"></i>
			<% else %>
				<i id="my-star-<%= i %>" class="far fa-star text-warning"></i>
			<% end %>
		<% end %>
	<% end %>

	<p>ma note : <span id="my-rating"><%= place.my_rating(current_user) %></span></p>

	<% 1.upto(5) do |i| %>
		<%= link_to user_rating_outlets_path(current_user, place_id: place.id, outlets: i), method: :post, remote: true  do%>
			<% if place.my_rating_outlets(current_user) >= i %>
				<i id="my-star-<%= i %>" class="fas fa-plug text-purple"></i>
			<% else %>
				<i id="my-star-<%= i %>" class="fas fa-plug text-black-50"></i>
			<% end %>
		<% end %>
	<% end %>

	<p>prises disponibles : <span id="my-rating"><%= place.my_rating_outlets(current_user) %></span></p>
<% end %>