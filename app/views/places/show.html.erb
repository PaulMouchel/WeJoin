<p id="notice"><%= notice %></p>

<p>
  <%if @place.place_pics.attached?%>
    <% @place.place_pics.each do |image| %>
      <%= image_tag image, class:"card-img-top"%> <br />
    <% end %>
  <%else%>
    <p>=== Il n'y a pas encore de photo lié à cet endroit ===</p>
  <%end%></p>
<p>
  <strong>Name:</strong>
  <%= @place.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @place.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @place.description %>
</p>

<p>
  <strong>Coffee price:</strong>
  <%= @place.coffee_price %>
</p>

<p>
  <strong>Tea price:</strong>
  <%= @place.tea_price %>
</p>

<p>
  <strong>Beer price:</strong>
  <%= @place.beer_price %>
</p>

<p>
  <strong>Wifi password:</strong>
  <%= @place.wifi_password %>
</p>

<%= link_to 'Back', city_places_path(@city) %>


<p><%= render "places/tags_list", tags: @place.tags %></p>

<p><%= render "favorite_place_icon", place: @place %></p>
<br><br>
<p><%= render "ratings", place: @place %></p>
