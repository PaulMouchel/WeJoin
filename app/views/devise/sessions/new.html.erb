<%= devise_error_messages! %>

<div class="row justify-content-center">
  <div class="col-lg-7 bloc">

    <div class="row title_bloc">
      <div class="col-lg-12 text-center ">
       
        <h2>SE CONNECTER</h2>
        
      </div>
    </div>


    <div class="row justify-content-center">
      <div class="col-lg-10 col-md-10 col-sm-10">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div >
            
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", class:"form-control" %>
          </div>

          <div >
            
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"mot de passe", class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "SE CONNECTER", class:"btn-submit float-right " %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>

  </div>
</div>
