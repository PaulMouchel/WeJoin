<script>	
	$(document).ready(function() {
		search = document.getElementById("search");
		search.addEventListener("keypress", function (e) {
			if (e.keyCode == 13) {
				let url = "cities"
				$.ajax({
				    url: url,
				    type: "GET",
				    dataType : 'script', 
				    data: { 
				        "search": search.value, 
				    },
				});
			}
		})
	});
</script>