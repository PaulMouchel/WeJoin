			<% end %>
		<% end %>
	<% end %>

	<p>prises disponibles : <span id="my-rating"><%= place.my_rating_outlets(current_user) %></span></p>

	<% 1.upto(5) do |i| %>
		<%= link_to user_rating_noise_levels_path(current_user, place_id: place.id, noise_levels: i), method: :post, remote: true  do%>
