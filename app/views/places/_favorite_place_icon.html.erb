<% if user_signed_in? %>
	<% if place.is_favorite?(current_user) %>
		<%= link_to user_favorite_path(current_user, current_user.favorites.find_by(favorite_place: place)), method: :delete, remote: true, id:"link-favorite-#{place.id}" do%>
			<i id="favorite-<%= place.id %>" class="fas fa-heart text-warning fa-2x"></i>
		<% end %>
	<% else %>
		<%= link_to user_favorites_path(current_user, place: place), method: :post, remote: true, id:"link-favorite-#{place.id}" do %>
			<i id="favorite-<%= place.id %>" class="far fa-heart text-warning fa-2x"></i>
		<% end %>
	<% end %>
<% end %>