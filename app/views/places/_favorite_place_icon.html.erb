<% if user_signed_in? %>
	<% if place.is_favorite?(current_user) %>
		<%= link_to user_favorite_path(current_user, current_user.favorites.find_by(favorite_place: place)), method: :delete  do%>
			<i class="fas fa-star text-warning fa-2x"></i>
		<% end %>
	<% else %>
		<%= link_to user_favorites_path(current_user, place: place), method: :post do %>
			<i class="far fa-star fa-2x"></i>
		<% end %>
	<% end %>
<% end %>