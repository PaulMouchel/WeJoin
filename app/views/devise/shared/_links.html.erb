<%- if controller_name != 'sessions' %>
	<div class="actions mt-3">
  		<%= link_to "SE CONNECTER", new_session_path(resource_name), class:'btn-submit btn-block' %>
	</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<div class="actions mt-3">
  		<%= link_to "S'ENREGISTRER", new_registration_path(resource_name), class:' btn-submit btn-block' %>
	</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	<div class="actions mt-3">
 	 	<%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class:'btn-submit btn-block', class:'btn-submit btn-block' %>
  	</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<div class="actions mt-3">
  		<%= link_to "Tu n'as pas reçu les instructions de confirmation ?", new_confirmation_path(resource_name), class:'btn-submit btn-block' %>
	</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	<div class="actions mt-3">
  		<%= link_to "Tu n'as pas reçu les instructions de déverouillage ?", new_unlock_path(resource_name), class:'btn-submit btn-block' %>
	</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
	<div class="actions mt-3">
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "S'ENREGISTRER AVEC #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:'btn-submit btn-block' %>
	  <% end %>
	</div>
<% end %>
