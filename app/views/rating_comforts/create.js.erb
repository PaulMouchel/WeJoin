myStarsArray = [""];
avStarsArray = [""];
for (i=1 ; i<=5 ; i++) {
	myStarsArray.push(document.getElementById("my-comfort-" + i));
	avStarsArray.push(document.getElementById("av-comfort-" + i));
}

myStars = <%= @rating.comforts %>;
avStars = <%= @rating.place.average_rating_comforts %>;

actualizeStars(myStarsArray, myStars);
actualizeStars(avStarsArray, Math.trunc(avStars));

document.getElementById("my-comfort-num").textContent = myStars;
document.getElementById("av-comfort-num").textContent = avStars.toFixed(1);

function actualizeStars(stars, rating) {
	for (i=1 ; i<=rating ; i++) {
		stars[i].classList.add("text-orange");
		stars[i].classList.remove("text-black-50");
	}
	for (i=rating+1 ; i<=5 ; i++) {
		stars[i].classList.add("text-black-50");
		stars[i].classList.remove("text-orange");
	}
}