
  <%= form_with(model: model, local: true) do |f| %>

  <div class="form-group">
    <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control", placeholder:"PrÃ©nom" %>
  </div><br/> <br/>


  <div class="form-group">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder:"Nom" %>
  </div><br/> <br/>
  

  <div class="form-group">
    <%= f.date_field :birth_date,  autofocus: true, autocomplete: "birth_date", class: "form-control", placeholder:"Date de naissance" %>
  </div><br/> <br/>


  <div class="form-group">
    <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control", placeholder:"Description" %>
  </div>

  <% if is_admin %>
    <%= f.check_box :is_admin, autofocus: true, autocomplete: "is_admin" %><br><br>
  <% end %><br/> <br/>

  <div class="form-group">
    <%= f.file_field :user_pic, autocomplete: :user_pic %><br />
  </div>

  <div>
    <%= link_to  "Delete photo", user_user_pic_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %><br />
  </div>

  <div class="actions mt-5">
    <%= f.submit "EDITER", class: "btn-submit float-right" %>
  </div><br>
<% end %>