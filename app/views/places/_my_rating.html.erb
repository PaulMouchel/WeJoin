			<% else %>
				<i id="my-star-<%= i %>" class="fas fa-volume-down text-black-50"></i>
			<% end %>
		<% end %>
	<% end %>

	<p>niveau de tranquilité : <span id="my-rating"><%= place.my_rating_noise_levels(current_user) %></span></p>
<% end %>

