<p id="notice"><%= notice %></p>

<p>
  <%if @place.place_pic.attached?%>
    <%= image_tag @place.place_pic, alt: 'place' %>
  <%else%>
    <p>=== Il n'y a pas encore de photo lié à cet endroit ===</p>
  <%end%></p>
<p>
  <strong>Name:</strong>
  <%= @place.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @place.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @place.description %>
</p>

<p>
  <strong>Coffee price:</strong>
  <%= @place.coffee_price %>
</p>

<p>
  <strong>Tea price:</strong>
  <%= @place.tea_price %>
</p>

<p>
  <strong>Beer price:</strong>
  <%= @place.beer_price %>
</p>

<p>
  <strong>Wifi password:</strong>
  <%= @place.wifi_password %>
</p>

<%= link_to 'Edit', edit_city_place_path(@city, @place) %> |
<%= link_to 'Back', city_places_path(@city) %>




<% if @place.is_favorite?(current_user) %>
	<%= button_to 'Remove from favorite', user_favorite_path(current_user, current_user.favorites.find_by(favorite_place: @place)), method: :delete %>
	<i class="fas fa-star text-warning fa-2x"></i>
<% else %>
	<%= button_to 'Add to favorite', user_favorites_path(current_user, place: @place) %>
	<i class="far fa-star fa-2x"></i>
<% end %>
