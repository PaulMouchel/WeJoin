<p id="notice"><%= notice %></p>

<p>
  <%if @city.city_pic.attached?%>
    <%= image_tag @city.city_pic, alt: 'city' %>
  <%else%>
    <p>=== Il n'y a pas encore de photo lié à cette ville ===</p>
  <%end%>
</p>

<p>
<strong>Name:</strong>
<%= @city.name %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @city.zip_code %>
</p>

<%= link_to 'Edit', edit_city_path(@city) %> |
<%= link_to 'Back', cities_path %>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Coffee price</th>
      <th>Tea price</th>
      <th>Beer price</th>
      <th>Wifi password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.address %></td>
        <td><%= place.description %></td>
        <td><%= place.coffee_price %></td>
        <td><%= place.tea_price %></td>
        <td><%= place.beer_price %></td>
        <td><%= place.wifi_password %></td>
        <td><%= link_to 'Show', city_place_path(@city, place) %></td>
        <td><%= link_to 'Edit', edit_city_place_path(@city, place) %></td>
        <td><%= link_to 'Destroy', city_place_path(@city, place), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_city_place_path(@city) %>
