<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12 bloc">

      <div class="row title_bloc">
        <div class="col-lg-12 text-center ">
         
          <h2>UTILISATEURS</h2>
          
        </div>
      </div>
      <div class="table col-lg-12">
      Nombre total de trypers : <%= @users.count %>
      </div>


      <div class="row">
        <div class="col-lg-12">
          
     
          <table class="table">
            <thead>
              <tr class="table-info">
                <th>id</th>
                <th>Email</th>
                <th>Description</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Admin?</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.sort_by{ |user| user.email }.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.email %></td>
                  <td><%= user.description %></td>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><span class="bg-<% if user.is_admin %>success<% else %>danger<% end %> rounded-circle", style="height: 20px; width: 20px; display: inline-block;"></span></td>
                  <td><%= link_to 'Show', admin_user_path(user), class:"btn btn-info" %></td>
                  <td><%= link_to 'Edit', edit_admin_user_path(user), class:"btn btn-primary" %></td>
                  <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>  
</div> 

<div class="space"></div>