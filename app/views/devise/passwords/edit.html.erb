<%= devise_error_messages! %>

<div class="row justify-content-center">
  <div class="col-lg-7 bloc">

    <div class="row title_bloc">
      <div class="col-lg-12 text-center ">
            <h2>NOUVEAU MOT DE PASSE</h2>      
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-10 col-md-10 col-sm-10">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
            <% end %>
            <%= f.password_field :password, autofocus: true, placeholder:'nouveau mot de passe', class:'form-control' %>

              <%= f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, placeholder:'confirmation mot de passe', class:'form-control' %>

            <div class="actions">
              <%= f.submit "ENVOYER", class:'btn-submit btn-block' %>
            </div>
        <% end %>
        <br><br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
