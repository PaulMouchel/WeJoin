<%= devise_error_messages! %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7 bloc">

      <div class="row title_bloc">
        <div class="col-lg-12 text-center ">
          <h2>RENVOYER L'EMAIL DE CONFIRMATION</h2>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-lg-10 col-md-10 col-sm-10">

  		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

  		    <%= f.label :email %><br />
  		    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder:"email", class:"form-control"  %>

  		  <div class="actions">
  		    <%= f.submit "RENVOYER L'EMAIL DE CONFIRMATION", class:"btn-submit btn-block " %>
  		  </div>
  		<% end %>
  		<br><br>
  		<%= render "devise/shared/links" %>
          
        </div>
      </div>
    </div>
  </div>
</div>