<%= form_with(model: [@city, @place], local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :coffee_price %>
    <%= form.text_field :coffee_price %>
  </div>

  <div class="field">
    <%= form.label :tea_price %>
    <%= form.text_field :tea_price %>
  </div>

  <div class="field">
    <%= form.label :beer_price %>
    <%= form.text_field :beer_price %>
  </div>

  <div class="field">
    <%= form.label :wifi_password %>
    <%= form.text_field :wifi_password %>
  </div>

  <div class="form-group">
    <%= form.label :place_pics %>
    <%= form.file_field :place_pics, multiple: true %><br />
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
