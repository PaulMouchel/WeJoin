<div class="container">
  <div class="row">
    
    <div class="col-lg-12 bloc">

      <div class="row title_bloc">
        <div class="col-lg-12 text-center ">
          <h2>Lieux à valider</h2> 
        </div>
      </div>

      <div class="row">
        <% @to_be_validated.each do |place| %>
          <div class="col-lg-4">	    			    
            <div class="card">
              <% if place.place_pics.attached?%>
                <%= image_tag place.place_pics.first, class:"card-img-top" %>
              <% end %>
              <div class="card-body">
                <h4 class="card-title"><%= place.name %> (<%=place.city.name%>)</h4>
                <p class="card-text"><%= place.address %></p>
                  <%= link_to 'Voir', admin_city_place_path(place.city, place) %>
                  <%= link_to 'Éditer', edit_admin_city_place_path(place.city, place) %>
                  <%= link_to 'Suprimer', admin_city_place_path(place.city, place), method: :delete, data: { confirm: 'Are you sure?' } %>
                <%= render "places/tags_list", tags: place.tags %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>

    <div class="col-lg-12 bloc">

      <div class="row title_bloc">
        <div class="col-lg-12 text-center ">
          <h2>Lieux validés</h2> 
        </div>
      </div>

      <div class="row">
        <% @validated.each do |place| %>
          <div class="col-lg-4">	    			    
            <div class="card">
              <%if place.place_pics.attached?%>
                <%= image_tag place.place_pics.first, class:"card-img-top" %>
              <% end %>
              <div class="card-body">
                <h4 class="card-title"><%= place.name %> (<%=place.city.name%>)</h4>
                <p class="card-text"><%= place.address %></p>
                  <%= link_to 'Show', admin_city_place_path(place.city, place) %>
                  <%= link_to 'Edit', edit_admin_city_place_path(place.city, place) %>
                  <%= link_to 'Destroy', admin_city_place_path(place.city, place), method: :delete, data: { confirm: 'Are you sure?' } %>
                <%= render "places/tags_list", tags: place.tags %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-lg-12 bloc">

      <div class="row title_bloc">
        <div class="col-lg-12 text-center ">
          <h2>Lieux rejetés</h2> 
        </div>
      </div>

      <div class="row">
        <% @non_validated.each do |place| %>
          <div class="col-lg-4">	    			    
            <div class="card">
              <%if place.place_pics.attached?%>
                <%= image_tag place.place_pics.first, class:"card-img-top" %>
              <% end %>
              <div class="card-body">
                <h4 class="card-title"><%= place.name %> (<%=place.city.name%>)</h4>
                <p class="card-text"><%= place.address %></p>
                  <%= link_to 'Show', admin_city_place_path(place.city, place) %>
                  <%= link_to 'Edit', edit_admin_city_place_path(place.city, place) %>
                  <%= link_to 'Destroy', admin_city_place_path(place.city, place), method: :delete, data: { confirm: 'Are you sure?' } %>
                <%= render "places/tags_list", tags: place.tags %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

