<p id="notice"><%= notice %></p>
<div class="container">
	<div class="space"></div>
	<h1>Mon planning</h1>

	<div id="my-events_calendar">
	  <%= render partial: "calendar", locals: {events: @attendances} %>
	</div>

	<div class="history">
	<h1>Mon historique</h1>
	<table>
		<thead>
		<tr>
			<th>Date</th>
			<th>Nom du lieu</th>
		</tr>
	</thead>
	<tbody>
	<% @past_attendances.each do |attendance| %>
			<tr>
				<td><%= attendance.date.to_date %></td>
				<td><%= attendance.place.name %></td>
			</tr>
	<%end%>
	</table>
	</div>
</div>