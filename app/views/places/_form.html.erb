<%= form_with(model: model, local: true) do |form| %>

  <%= form.text_field :name, placeholder:"nom",class:"form-control" %>

  <%= form.text_field :address, placeholder:"adresse", class:"form-control" %>

  <% if @is_admin %>
    <%= form.number_field :latitude, :step => "0.00000000000000001", placeholder:"latitude", class:"form-control" %>

    <%= form.number_field :longitude, :step => "0.00000000000000001", placeholder:"longitude", class:"form-control" %>
  <% end %>

  <%= form.text_area :description, placeholder:"description", class:"form-control" %>

  <%= form.label :coffee_price, 'Prix du café' %>
  <%= form.number_field(:coffee_price, in: 0.0..20.0, step: 0.05) %>

  <%= form.label :tea_price, 'Prix du thé' %>
  <%= form.number_field(:tea_price, in: 0.0..20.0, step: 0.05) %>

  <%= form.label :beer_price, 'Prix de la bière' %>
  <%= form.number_field(:beer_price, in: 0.0..20.0, step: 0.05) %>

  <%= form.text_field :wifi_identification, placeholder:"Nom du wifi", class:"form-control" %>

  <%= form.text_field :wifi_password, placeholder:"Mot de passe wifi", class:"form-control" %>

  <div class="btn-input mb-3">
    <button class="btn-submit btn-block">Sélectionner un fichier
      <%= form.file_field :place_pics, multiple: true %>
    </button>
  </div>

  <%= form.select(:all_tags, Tag.all.map{|tag|tag.name}, { }, { multiple: true, id: "tags_list" })  %>

  <div class="actions mt-5">
    <%= form.submit 'ENVOYER', class:"btn-submit btn-block" %>
  </div>
<% end %>

<script>
  $(document).ready(function() {   
    $('#tags_list').chosen({
      allow_single_deselect: true,
      width: '100%'
    })
  });
</script>