<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7 bloc">

      <div class="row title_bloc">
        <div class="col-lg-12 text-center ">
         
          <h2>TAGS</h2>
          
        </div>
      </div>

    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-10 col-sm-10">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @tags.each do |tag| %>
                <tr>
                  <td><%= tag.name %></td>
                  <td><%= link_to 'Edit', edit_admin_tag_path(tag) %></td>
                  <td><%= link_to 'Destroy', admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <%= link_to 'New Tag', new_admin_tag_path, class:'btn-submit' %>
         </div>
      </div>
    </div>
  </div>
  <div class="space"></div>
</div>